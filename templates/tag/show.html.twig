{% extends 'admin/layout.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body_content %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ tag.createdAt ? tag.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="admin-show">
        <div>
            <a class="btn btn-success" href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>
        </div>
        <div>
            {{ include('tag/_delete_form.html.twig') }}
        </div>
        <div>
            <a class="btn btn-default" href="{{ path('tag_index') }}">< back to list</a>
        </div>
    </div>
{% endblock %}
