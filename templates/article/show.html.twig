{% extends 'admin/layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body_content %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{{ article.updateAt ? article.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if article.image %}
                        <img src="{{ vich_uploader_asset(article.image, 'imageFile') }}" alt="" height="30" width="30">
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content|raw }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div class="admin-show">
        <div>
            <a class="btn btn-success" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
        </div>
        <div>
            {{ include('article/_delete_form.html.twig') }}
        </div>
        <div>
            <a class="btn btn-default" href="{{ path('article_index') }}">< back to list</a>
        </div>
    </div>
{% endblock %}
