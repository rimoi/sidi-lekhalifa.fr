{% extends 'admin/layout.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body_content %}
        <h1>Article index</h1>
        <div class="admin-margin">
            <a class="btn btn-primary" href="{{ path('article_new') }}">Nouveau Article</a>
        </div>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Content</th>
                <th colspan="2">actions</th>
                <th>Supprim√©</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>
                        {% if article.image %}
                            <img src="{{ vich_uploader_asset(article.image, 'imageFile') }}" alt="" height="30" width="30">
                        {% endif %}
                    </td>
                    <td>{{ article.content|raw }}</td>
                    <td>
                        <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    </td>
                    <td>
                        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    </td>
                    <td>
                        <span class="badge badge-secondary">{{ article.archived ? 'oui' : 'non' }}</span>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
